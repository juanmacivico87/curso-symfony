{% extends 'base.html.twig' %}

{% block main_container %}
    {% include 'partials/_messages.html.twig' %}
    <form method="POST">
        <div class="form-group">
            <label for="categoryName">Name</label>
            <input type="text" class="form-control" value="{{ category.name }}" name="categoryName" placeholder="Name" />
        </div>
        <div class="form-group">
            <label for="categoryColour">Colour (RGB)</label>
            <input type="text" class="form-control" value="{{ category.colour }}" name="categoryColour" placeholder="#000000" />
        </div>
        <input type="hidden" value="{{ csrf_token('category') }}" name="categoryToken" />
        <button type="submit" class="btn btn-outline-success">Save</button>
    </form>
{% endblock %}

