{% extends 'base.html.twig' %}

{% block main_container %}
    {% include 'partials/_messages.html.twig' %}
    <h1>List of categories</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Colour (RGB)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>{{ category.colour }}</td>
                    <td>
                        <a class="btn btn-link" href="{{ path('app_category_edit', {id:category.id}) }}" title="Edit">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-link" href="{{ path('app_category_remove', {id:category.id}) }}" title="Remove">Remove</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-success" href="{{ path('app_category_new') }}" title="Add new">Add new</a>
{% endblock %}

