{% extends 'base.html.twig' %}

{% block title %}Bookmark index{% endblock %}

{% block main_container %}
    <h1>Bookmark index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bookmark in bookmarks %}
            <tr>
                <td>{{ bookmark.id }}</td>
                <td>{{ bookmark.name }}</td>
                <td>{{ bookmark.url }}</td>
                <td>
                    <a class="btn btn-link" href="{{ path('app_bookmark_edit', {id:bookmark.id}) }}" title="Edit">Edit</a>
                </td>
                <td>
                    <a class="btn btn-link" href="{{ path('app_bookmark_delete', {id:bookmark.id}) }}" title="Remove">Remove</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Bookmarks not found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-success" href="{{ path('app_bookmark_new') }}" title="Add new">Add new</a>
{% endblock %}
