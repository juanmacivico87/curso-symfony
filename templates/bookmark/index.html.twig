{% extends 'base.html.twig' %}

{% block title %}Bookmark index{% endblock %}

{% block main_container %}
    <h1>Bookmark index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bookmark in bookmarks %}
            <tr>
                <td>{{ bookmark.id }}</td>
                <td>{{ bookmark.name }}</td>
                <td>{{ bookmark.url }}</td>
                <td>
                    <a href="{{ path('app_bookmark_edit', {'id': bookmark.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bookmark_new') }}">Add new</a>
{% endblock %}
