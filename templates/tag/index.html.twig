{% extends 'base.html.twig' %}

{% block main_container %}
    {% include 'partials/_messages.html.twig' %}
    <h1>List of tags</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('app_tag_show', {'id': tag.id}) }}">Show</a>
                    <a href="{{ path('app_tag_edit', {'id': tag.id}) }}">Edit</a>
                    <a href="{{ path('app_tag_remove', {'id': tag.id}) }}">Remove</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tag_new') }}">Add new</a>
{% endblock %}
