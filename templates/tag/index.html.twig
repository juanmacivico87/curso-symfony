{% extends 'base.html.twig' %}

{% block main_container %}
    {% include 'partials/_messages.html.twig' %}
    <h1>List of tags</h1>
    <table class="table">
        {% if tags is not empty %}
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
        {% endif %}
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.name }}</td>
                <td>
                    <a class="btn btn-link" href="{{ path('app_tag_edit', {id:tag.id}) }}" title="Edit">Edit</a>
                </td>
                <td>
                    <a class="btn btn-link" href="{{ path('app_tag_remove', {id:tag.id}) }}" title="Remove">Remove</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>Tags not found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('app_tag_new') }}" title="Add new">Add new</a>
{% endblock %}
